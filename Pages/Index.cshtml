                            <span id="maxPriceLabel" class="ms-2">
                                @(Model.MaxPrix ?? 50000)
                            </span>

                            <input type="range"
                                   class="form-range"
                                   id="maxPriceSlider"
                                   name="maxPrix"
                                   min="0" max="50000" step="10"
                                   value="@(Model.MaxPrix ?? 50000)">
                        </div>

                        <!-- Catégories -->
                        <div>
                            <h6 class="fw-semibold mb-3">Catégories</h6>

                            @foreach (var cat in Model.Categories)
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="categories"
                                           value="@cat"
                                           id="cat-@cat.Replace(" ", "-")"
