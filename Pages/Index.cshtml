    <script>
        function toggleChat() {
            document.getElementById('chatWindow').classList.toggle('show');
        }

        async function sendChat() {
            const input = document.getElementById('chatInput');
            const messages = document.getElementById('chatMessages');
            const text = input.value.trim();
            if (!text) return;

            // Afficher message utilisateur
            const userMsg = document.createElement('div');
            userMsg.className = 'user-message';
            userMsg.textContent = text;
            messages.appendChild(userMsg);
            input.value = '';
            messages.scrollTop = messages.scrollHeight;

            // Indicateur de frappe
            const typing = document.createElement('div');
            typing.className = 'typing';
            typing.innerHTML = '<span></span><span></span><span></span>';
            messages.appendChild(typing);
            messages.scrollTop = messages.scrollHeight;

            try {
                const response = await fetch('/api/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message: text })
                });

                const data = await response.json();
                typing.remove();

                // Afficher texte du bot
                const botMsg = document.createElement('div');
                botMsg.className = 'bot-message';
                botMsg.textContent = data.text || '❌ Erreur';
                messages.appendChild(botMsg);

                // ⭐ Afficher les cartes produits si présentes
                if (data.products && data.products.length > 0) {
                    const productsContainer = document.createElement('div');
                    productsContainer.style.cssText = 'display: flex; flex-wrap: wrap; gap: 10px; margin-top: 10px;';

                    data.products.forEach(product => {
                        const productCard = document.createElement('div');
                        productCard.style.cssText = `
                            background: white;
                            border: 2px solid #e2e8f0;
                            border-radius: 12px;
                            padding: 12px;
                            width: 160px;
                            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                            transition: all 0.3s;
                            cursor: pointer;
                        `;

                        productCard.innerHTML = `
                            <img src="${product.imageUrl}"
                                 alt="${product.nom}"
                                 style="width: 100%; height: 120px; object-fit: cover; border-radius: 8px; margin-bottom: 8px;"
                                 onerror="this.src='https://images.unsplash.com/photo-1560393464-5c69a73c5770?w=400'">
                            <div style="font-weight: bold; font-size: 13px; margin-bottom: 6px; color: #1e293b; line-height: 1.3;">
                                ${product.nom}
                            </div>
                            <div style="color: #dc2626; font-size: 16px; font-weight: bold; margin-bottom: 8px;">
                                ${product.prix.toFixed(2)} MAD
                            </div>
                            <div style="font-size: 11px; color: #16a34a; margin-bottom: 8px; font-weight: 600;">
                                Stock: ${product.stock}
                            </div>
                            <button onclick="addToCartFromChat(${product.id})"
                                    style="width: 100%; background: linear-gradient(135deg, #16a34a 0%, #15803d 100%); color: white; border: none; padding: 8px; border-radius: 8px; font-weight: 600; font-size: 12px; cursor: pointer; transition: all 0.3s;">
                                <i class="bi bi-cart-plus"></i> Ajouter
                            </button>
                        `;

                        // Effet hover
                        productCard.onmouseenter = () => {
                            productCard.style.transform = 'translateY(-4px)';
                            productCard.style.boxShadow = '0 8px 16px rgba(0,0,0,0.15)';
                        };
                        productCard.onmouseleave = () => {
                            productCard.style.transform = 'translateY(0)';
                            productCard.style.boxShadow = '0 2px 8px rgba(0,0,0,0.1)';
                        };

                        productsContainer.appendChild(productCard);
                    });

                    messages.appendChild(productsContainer);
                }

                messages.scrollTop = messages.scrollHeight;

            } catch (error) {
                typing.remove();
                const errorMsg = document.createElement('div');
                errorMsg.className = 'bot-message';
                errorMsg.textContent = '❌ Erreur de connexion. Veuillez réessayer.';
                messages.appendChild(errorMsg);
                messages.scrollTop = messages.scrollHeight;
            }
        }

        // ⭐ Fonction pour ajouter au panier depuis le chat
               async function addToCartFromChat(productId) {
            const button = event.target;
            const originalText = button.innerHTML;
            button.disabled = true;
            button.innerHTML = '<i class="bi bi-hourglass-split"></i> Ajout...';

            try {
                const response = await fetch(`/?handler=AddToCart&id=${productId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                if (response.ok) {
                    button.innerHTML = '<i class="bi bi-check-circle"></i> Ajouté !';
                    button.style.background = 'linear-gradient(135deg, #16a34a 0%, #15803d 100%)';

                    const messages = document.getElementById('chatMessages');
                    const successMsg = document.createElement('div');
                    successMsg.className = 'bot-message';
                    successMsg.innerHTML = '✅ Produit ajouté au panier avec succès !';
                    successMsg.style.background = 'linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%)';
                    successMsg.style.color = '#065f46';
                    successMsg.style.fontWeight = '600';
                    messages.appendChild(successMsg);
                    messages.scrollTop = messages.scrollHeight;

                    await updateCartCount();

                    setTimeout(() => {
                        button.disabled = false;
                        button.innerHTML = originalText;
                        button.style.background = '';
                    }, 2000);

                } else {
                    button.disabled = false;
                    button.innerHTML = originalText;

                    const messages = document.getElementById('chatMessages');
                    const errorMsg = document.createElement('div');
                    errorMsg.className = 'bot-message';
                    errorMsg.innerHTML = '❌ Erreur lors de l\'ajout';
                    errorMsg.style.background = '#fee2e2';
                    errorMsg.style.color = '#dc2626';
                    messages.appendChild(errorMsg);
                    messages.scrollTop = messages.scrollHeight;
                }
            } catch (error) {
                button.disabled = false;
                button.innerHTML = originalText;
            }
        }

        // ⭐ Mettre à jour le compteur panier
        async function updateCartCount() {
            try {
                const response = await fetch('/?handler=CartCount');
                const data = await response.json();

                const cartBadge = document.querySelector('.cart-badge');

                if (data.count > 0) {
                    if (cartBadge) {
                        cartBadge.textContent = data.count;
                        cartBadge.style.animation = 'none';
                        setTimeout(() => {
                            cartBadge.style.animation = 'pulse 0.5s';
                        }, 10);
                    } else {
                        const cartBtn = document.querySelector('.btn-cart');
                        const badge = document.createElement('span');
                        badge.className = 'cart-badge';
                        badge.textContent = data.count;
                        cartBtn.appendChild(badge);
                    }
                } else {
                    if (cartBadge) cartBadge.remove();
                }
            } catch (error) {
                console.error('Erreur:', error);
            }
        }
        
    </script>
                <script>
                    // Mise à jour des labels des sliders de prix
                    const minSlider = document.getElementById('minPriceSlider');
                    const maxSlider = document.getElementById('maxPriceSlider');
                    const minLabel = document.getElementById('minPriceLabel');
                    const maxLabel = document.getElementById('maxPriceLabel');

                    function updateLabels() {
                        let minVal = parseInt(minSlider.value);
                        let maxVal = parseInt(maxSlider.value);

                        if (minVal > maxVal) {
                            minVal = maxVal;
                            minSlider.value = minVal;
                        }
                        if (maxVal < minVal) {
                            maxVal = minVal;
                            maxSlider.value = maxVal;
                        }

                        minLabel.textContent = minVal;
                        maxLabel.textContent = maxVal;
                    }

                    minSlider.addEventListener('input', updateLabels);
                    maxSlider.addEventListener('input', updateLabels);
                </script>


