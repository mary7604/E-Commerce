@page "{id:int}"
@model WebApplication1.Pages.PaymentModel
@{
    ViewData["Title"] = "Paiement";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MimiBout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .payment-container {
            max-width: 700px;
            margin: 0 auto;
        }

        .payment-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            overflow: hidden;
        }

        .payment-header {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }

            .payment-header h2 {
                margin: 0;
                font-weight: 700;
            }

        .payment-body {
            padding: 2.5rem;
        }

        .order-summary {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border-left: 4px solid #667eea;
        }

        .summary-total {
            font-size: 1.8rem;
            font-weight: 700;
            color: #e74c3c;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 2px solid #2c3e50;
            text-align: center;
        }

        .payment-methods {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 1rem;
            margin: 2rem 0;
        }

        .payment-method {
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            background: white;
        }

            .payment-method:hover {
                border-color: #667eea;
                transform: translateY(-4px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            }

            .payment-method.selected {
                border-color: #667eea;
                background: #f0f3ff;
            }

            .payment-method input[type="radio"] {
                display: none;
            }

            .payment-method i {
                font-size: 3rem;
                color: #667eea;
                margin-bottom: 0.5rem;
            }

        .btn-pay {
            background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
            color: white;
            border: none;
            padding: 1rem;
            border-radius: 8px;
            font-weight: 600;
            width: 100%;
            font-size: 1.125rem;
            transition: all 0.3s;
        }

            .btn-pay:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(39, 174, 96, 0.4);
            }

        .btn-cancel {
            background: #95a5a6;
            color: white;
            border: none;
            padding: 0.875rem;
            border-radius: 8px;
            font-weight: 600;
            width: 100%;
            margin-top: 1rem;
            text-decoration: none;
            display: block;
            text-align: center;
        }

        .security-badge {
            text-align: center;
            margin-top: 2rem;
            color: #7f8c8d;
        }

            .security-badge i {
                color: #27ae60;
                margin-right: 0.5rem;
            }
    </style>
</head>
<body>
    <div class="payment-container">
        <div class="payment-card">
            <div class="payment-header">
                <h2><i class="bi bi-credit-card"></i> Paiement Sécurisé</h2>
                <p class="mb-0">Finalisez votre commande</p>
            </div>

            <div class="payment-body">
                <!-- Résumé de la commande -->
                <div class="order-summary">
                    <h4 class="mb-3 text-center"><i class="bi bi-receipt"></i> Récapitulatif</h4>

                    <div class="summary-total">
                        <div>Total à payer</div>
                        <div style="font-size: 2.5rem; margin-top: 0.5rem;">@Model.Total.ToString("N2") MAD</div>
                    </div>
                </div>

                <!-- Méthodes de paiement -->
                <h4 class="mb-3"><i class="bi bi-wallet2"></i> Mode de paiement</h4>

                <form method="post">
                    <div class="payment-methods">
                        <label class="payment-method selected" id="carte">
                            <input type="radio" name="PaymentMethod" value="carte" checked onchange="selectMethod('carte')">
                            <i class="bi bi-credit-card-fill"></i>
                            <div><strong>Carte bancaire</strong></div>
                            <small class="text-muted">Visa, Mastercard</small>
                        </label>

                        <label class="payment-method" id="especes">
                            <input type="radio" name="PaymentMethod" value="especes" onchange="selectMethod('especes')">
                            <i class="bi bi-cash-coin"></i>
                            <div><strong>À la livraison</strong></div>
                            <small class="text-muted">En espèces</small>
                        </label>

                        <label class="payment-method" id="virement">
                            <input type="radio" name="PaymentMethod" value="virement" onchange="selectMethod('virement')">
                            <i class="bi bi-bank"></i>
                            <div><strong>Virement</strong></div>
                            <small class="text-muted">RIB fourni</small>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-pay">
                        <i class="bi bi-check-circle"></i> Confirmer (@Model.Total.ToString("N2") MAD)
                    </button>
                </form>

                <a href="/" class="btn btn-cancel">
                    <i class="bi bi-x-circle"></i> Annuler
                </a>

                <div class="security-badge">
                    <i class="bi bi-shield-check"></i>
                    Paiement 100% sécurisé • SSL
                </div>
            </div>
        </div>
    </div>

    <script>
        function selectMethod(method) {
            document.querySelectorAll('.payment-method').forEach(el => {
                el.classList.remove('selected');
            });
            document.getElementById(method).classList.add('selected');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
