@page "{id:int}"
@model WebApplication1.Pages.InvoiceModel
@{
    ViewData["Title"] = "Facture";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Facture</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        @@media print {
            .no-print { display: none !important; }
        }

        body {
            background: #f5f5f5;
        }

        .action-buttons {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            display: flex;
            gap: 10px;
        }

        .btn-action {
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-home {
            background: #2c3e50;
            color: white;
        }

        .btn-home:hover {
            background: #34495e;
            transform: translateY(-2px);
            color: white;
        }

        .btn-print {
            background: #667eea;
            color: white;
        }

        .btn-print:hover {
            background: #5568d3;
            transform: translateY(-2px);
        }

        .success-message {
            background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
            color: white;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(39, 174, 96, 0.3);
        }

        .success-message i {
            font-size: 3rem;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <!-- Boutons d'action -->
    <div class="action-buttons no-print">
        <a href="/" class="btn-action btn-home">
            <i class="bi bi-house-fill"></i> Retour à l'accueil
        </a>
        <button onclick="window.print()" class="btn-action btn-print">
            <i class="bi bi-printer-fill"></i> Imprimer
        </button>
    </div>

    <div class="container my-5">
        <!-- Message de succès -->
        @if (TempData["Message"] != null)
        {
            <div class="success-message no-print">
                <i class="bi bi-check-circle-fill"></i>
                <h3 style="margin: 0;">@TempData["Message"]</h3>
                <p style="margin: 10px 0 0 0;">Votre facture est prête !</p>
            </div>
        }

        <!-- Facture HTML -->
        @Html.Raw(Model.InvoiceHtml)
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
