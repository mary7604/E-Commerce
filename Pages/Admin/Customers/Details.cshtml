  @page "{id:int}"
@model WebApplication1.Pages.Admin.Customers.DetailsModel
@{
    
    ViewData["Title"] = "Détails Client";

}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="fas fa-user-circle"></i> Détails du Client
        </h1>
        <a href="/Admin/Customers" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    @if (Model.Client == null)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Client introuvable
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-user"></i> Informations
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tr>
                                <th style="width: 40%;">ID</th>
                                <td>@Model.Client.Id</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>@Model.Client.Nom</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Client.Email</td>
                            </tr>
                            <tr>
                                <th>Téléphone</th>
                                <td>@(Model.Client.Telephone ?? "Non renseigné")</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>@(Model.Client.Adresse ?? "Non renseignée")</td>
                            </tr>
                        </table>
                        <div class="mt-3">
                            <a href="/Admin/Customers/Edit/@Model.Client.Id" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-shopping-cart"></i> Commandes (@Model.Commandes.Count)
                    </div>
                    <div class="card-body">
                        @if (Model.Commandes.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Commande #</th>
                                            <th>Date</th>
                                            <th>Montant</th>
                                            <th>Statut</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var commande in Model.Commandes)
                                        {
                                            <tr>
                                                <td>#@commande.Id</td>
                                                <td>@commande.DateCommande.ToString("dd/MM/yyyy")</td>
                                                <td>@commande.MontantTotal.ToString("N2") MAD</td>
                                                <td>
                                                    <span class="badge bg-info">@commande.Statut</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="mt-3">
                                <strong>Total dépensé :</strong>
                                @Model.Commandes.Sum(c => c.MontantTotal).ToString("N2") MAD
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Aucune commande</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>